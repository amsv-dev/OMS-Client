# =============================================================================
# OMS CLIENT - Environment Variables Template
# =============================================================================
# INSTRUCTIONS:
# 1. Copy this file: cp .env.example .env
# 2. Replace all <CHANGE_ME> and <CLIENT_NAME> values
# 3. Match INFLUXDB_CENTRAL_TOKEN with Central VM token
# 4. NEVER commit the actual .env file to Git
# =============================================================================

# =============================================================================
# RUNTIME IDENTITY
# =============================================================================

TENANT_ID=<TENANT_ID>    # Issued by OMS Central onboarding
ASSET_ID=<ASSET_ID>      # Issued by OMS Central onboarding bundle

# =============================================================================
# INFLUXDB LOCAL - Metrics Storage
# =============================================================================

DOCKER_INFLUXDB_INIT_USERNAME=admin
DOCKER_INFLUXDB_INIT_PASSWORD=<CHANGE_ME>  # Generate: openssl rand -base64 24
DOCKER_INFLUXDB_INIT_ORG=client
DOCKER_INFLUXDB_INIT_BUCKET=metrics
DOCKER_INFLUXDB_INIT_ADMIN_TOKEN=<CHANGE_ME>  # Generate: openssl rand -base64 32

# =============================================================================
# SOLACE - Message Broker Connection
# =============================================================================

SOLACE__HOST=192.168.56.30
SOLACE__PORT=1883
SOLACE__VPN=default
SOLACE__USERNAME=<CLIENT_NAME>-agent
SOLACE__PASSWORD=<CHANGE_ME>

# Exposed HTTP ports (client layer)
CLIENT_INFLUXDB_HTTP_PORT=8087
CLIENT_DEMO_TRIGGERS_PORT=3101
CLIENT_ASSESSMENT_HTTP_PORT=3002

# =============================================================================
# CUSTOMER AGENT / ASSESSMENT
# =============================================================================

ASPNETCORE_ENVIRONMENT=Production
# ACR client p√∫blico (self-service, sem login): omsv2client.azurecr.io
# Override para testes: omsv2acr.azurecr.io (requer docker login)
CLIENT_IMAGE_REGISTRY=omsv2client.azurecr.io
OMS_IMAGE_TAG=latest
